<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>larisa</artifactId>
        <groupId>com.bochkov</groupId>
        <version>1.0</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>larisa-jsf</artifactId>
    <packaging>war</packaging>
    <name>larisa-jsf</name>
    <properties>
        <webxml>src/main/webapp/WEB-INF/web-production.xml</webxml>
        <spring.security.version>4.2.3.RELEASE</spring.security.version>
        <spring.webflow.version>2.4.5.RELEASE</spring.webflow.version>
        <cacheSeconds>-1</cacheSeconds>
    </properties>
    <profiles>
        <profile>
            <id>development</id>
            <properties>
                <webxml>src/main/webapp/WEB-INF/web-development.xml</webxml>
                <cacheSeconds>0</cacheSeconds>
            </properties>
        </profile>
    </profiles>
    <build>
        <finalName>larisa</finalName>
        <plugins>
            <plugin>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <webXml>${webxml}</webXml>
                    <webResources>
                        <resource>
                            <filtering>true</filtering>
                            <directory>
                                src/main/webapp
                            </directory>
                        </resource>
                    </webResources>
                </configuration>
            </plugin>
        </plugins>

    </build>
