<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.4.xsd">
    <input name="entity" type="larisa.entity.Product" required="true"/>
    <view-state id="edit" view="../edit.xhtml">
        <transition on="save" to="edit-confirmed">
            <evaluate expression="productService.save(entity)" result="entity"/>
            <evaluate expression="!messageContext.hasErrorMessages()"/>
        </transition>
        <transition on="cancel" to="edit-canceled"/>
        <transition on="new" to="edit">
            <evaluate expression="productService.createNewInstance()" result="entity"/>
        </transition>
        <transition on="clone" to="edit">
            <evaluate expression="productService.clone(entity)" result="entity"/>
        </transition>
        <transition on="delete" to="edit-confirmed">
            <evaluate expression="productService.delete(entity)"/>
        </transition>
        <transition on="edit-productType" to="edit-productType">

        </transition>
        <transition on="new-productType" to="new-productType">

        </transition>
    </view-state>

    <subflow-state id="edit-productType" subflow="base/productType/edit">
        <input name="entity" value="entity.productType" type="larisa.entity.ProductType" required="true"/>
        <transition on="edit-canceled" to="edit"/>
        <transition on="edit-confirmed" to="edit">
            <evaluate expression="entity.productType = currentEvent.attributes.entity"/>
        </transition>
    </subflow-state>

    <subflow-state id="new-productType" subflow="base/productType/edit">
        <input name="entity" value="productTypeService.createNewInstance()" type="larisa.entity.ProductType"
               required="true"/>
        <transition on="edit-canceled" to="edit"/>
        <transition on="edit-confirmed" to="edit">
            <evaluate expression="entity.productType = currentEvent.attributes.entity"/>
        </transition>
    </subflow-state>

    <end-state id="edit-canceled">

    </end-state>
    <end-state id="edit-confirmed">
        <output name="entity" value="entity"/>
    </end-state>
</flow>