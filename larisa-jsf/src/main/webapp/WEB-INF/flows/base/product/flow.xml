<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.4.xsd"
      start-state="list"
      parent="parent-flow">
    <var name="data" class="larisa.jsf.data.ProductDataModel"/>
    <var name="entity" class="larisa.entity.Product"/>
    <view-state id="list" view="list.xhtml">
        <transition on="edit" to="edit">
        </transition>
        <transition on="prepare-delete">
        </transition>

        <transition on="edit-productType" to="edit-productType">

        </transition>

        <transition on="edit-maker" to="edit-maker">

        </transition>
    </view-state>
    <subflow-state id="edit" subflow="base/product/edit">
        <input name="entity" type="larisa.entity.Product"/>
        <transition on="edit-canceled" to="list"/>
        <transition on="edit-confirmed" to="list"/>
    </subflow-state>
    <subflow-state id="edit-productType" subflow="base/productType/edit">
        <input name="entity" value="entity.productType" type="larisa.entity.ProductType" required="true"/>
        <transition on="edit-canceled" to="list"/>
        <transition on="edit-confirmed" to="list"/>
    </subflow-state>
    <subflow-state id="edit-maker" subflow="base/maker/edit">
        <input name="entity" value="entity.productType.maker" type="larisa.entity.Maker" required="true"/>
        <transition on="edit-canceled" to="list"/>
        <transition on="edit-confirmed" to="list"/>
    </subflow-state>
    <global-transitions>
        <transition on="new" to="edit">
            <evaluate expression="productService.createNewInstance()" result="entity"/>
        </transition>
        <transition on="delete">
            <evaluate expression="productService.delete(entity)"/>
        </transition>
    </global-transitions>
</flow>